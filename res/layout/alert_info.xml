<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:text="姓名："
            android:layout_width="match_parent" android:padding="5dp"
            android:layout_height="wrap_content" android:id="@+id/name"/>
    <TextView
            android:text="手机："
            android:layout_width="match_parent" android:padding="5dp"
            android:layout_height="wrap_content" android:id="@+id/phone"/>
    <TextView
            android:text="性别："
            android:layout_width="match_parent" android:padding="5dp"
            android:layout_height="wrap_content" android:id="@+id/gender"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:padding="5dp">
        <TextView
                android:text="地址："
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" android:id="@+id/address_title"/>
        <TextView
                android:text="地址"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/address_title"
                android:layout_height="wrap_content" android:id="@+id/address"/>
    </RelativeLayout>
</LinearLayout>