<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:padding="5dp"
              android:layout_height="wrap_content">

    <TextView
            android:text="家电名称："
            android:layout_width="wrap_content"
            android:padding="1dp"
            android:layout_height="wrap_content" android:id="@+id/appliance_name"/>
    <TextView
            android:text="家电型号："
            android:layout_width="wrap_content"
            android:padding="1dp"
            android:layout_height="wrap_content" android:id="@+id/appliance_model"/>

    <TextView
            android:text="零件名称："
            android:layout_width="wrap_content"
            android:padding="1dp"
            android:layout_height="wrap_content" android:id="@+id/appliance_part"/>
    <TextView
            android:text="零件价格："
            android:layout_width="wrap_content"
            android:padding="1dp"
            android:layout_height="wrap_content" android:id="@+id/appliance_price"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
        <TextView
                android:text="零件参数："
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" android:id="@+id/appliance_arg_title"/>
        <TextView
                android:text="零件参数"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/appliance_arg_title"
                android:layout_height="wrap_content" android:id="@+id/appliance_arg"/>
    </RelativeLayout>

</LinearLayout>